        <div class="loader">
            Loading...
        </div>  
    </div>
    <div class="alert alert-danger" role="alert" id="div-entidades-alert" style="display:none;"> 
        <strong>{{ 'Error en el servidor'|trans }}!</strong> {{ 'Error al obtener el grupo de selección'|trans }}.</span>
    </div>
</div>