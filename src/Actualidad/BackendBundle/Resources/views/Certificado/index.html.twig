{% extends '::admin.html.twig'%}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .input-group-addon{padding:0px;}
        .input-group .form-control {
            z-index: 1;
        }
        .sty__title {
            padding: 2px 5px;
            box-shadow: 0px 3px 10px rgba(51, 51, 51, 0.5);
            font-weight: bold;
        }

        .modal-dialog {
            max-width: 1188px;
            margin: 30px auto;
        }
    </style>
{% endblock %}

{% block body %}
<br>
<div class="row align-items-center justify-content-between">
    <div class="col-12 col-sm-12 page-title">
        <h3></h3>
    </div>
    <div class="col text-right">
        <a href="{{ path('_registroCertificado')}}" class="bttn__nr"><span class="fa fa-plus" style="margin-top: 8px;"></span><span class="text__nr">{{ 'Nuevo registro'|trans }}</span></a>
    </div>
</div>
<div class="row">
    <div class="col-sm-16 col-md-16 col-lg-16">
        <div class="card">
            <div class="card-header gradiente">
                <h5 class="card-title">{{'Listado de certificados'|trans}}</h5>
            </div>
            <div class="card-block">
                <div class="row" id="div-active-alert" style="display:none;">
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                    <div class="col-sm-12">
                        <div class="alert alert-danger" role="alert"> 
                            <strong>{{ 'Error en el servidor'|trans }}!</strong> <span id="active-error">{{ 'Ha ocurrido un error en el servidor. Contacte al administrador del sistema.'|trans }}.</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                </div>
                <table class="table" id="dt">
                    <thead class="sty__title">
                        <tr>
                            <th class="hd__title">{{ 'Grado'|trans }}</th>
                            <th class="hd__title">{{ 'Tipo de certificado'|trans }}</th>
                            <th class="hd__title">{{ 'Entidad'|trans }}</th>
                            <th class="hd__title">{{ 'Acciones'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for certificado in certificados %}
                            <tr class="odd">
                                <td>{{ certificado.grado }}</td>
                                <td>{{ certificado.tipoCertificado }}</td>
                                <td>{{ certificado.entidad }}</td>
                                 <td class="center">
                                    <a href="{{ path('_registroCertificado', { 'certificado_id': certificado.id }) }}" title="{{ 'Editar'|trans }}" class="btn btn-link btn-sm edit"><span class="fa fa-pencil"></span></a>
                                    <a href="{{ path('_generarPdf', { 'certificado_id': certificado.id }) }}" target="_blank" title="{{ 'Vista Previa'|trans }}" class="btn btn-link btn-sm edit"><span class="fa fa-file-pdf-o"></span></a>
                                    <a href="#" class="btn btn-link btn-sm {% if certificado.delete_disabled == '' %}delete{% endif %} {{ certificado.delete_disabled }}" data="{{ certificado.id }}"><span class="fa fa-trash"></span></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('.delete').click(function(){
            var certificado_id = $(this).attr('data');
            sweetAlertDelete(certificado_id, 'EaCertificado');
        });
    </script>
{% endblock %}