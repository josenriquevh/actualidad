{% extends '::admin.html.twig'%}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .sty__title {
            padding: 2px 5px;
            box-shadow: 0px 3px 10px rgba(51, 51, 51, 0.5);
            font-weight: bold;
        }
        .modal-dialog {
            max-width: 1188px;
            margin: 30px auto;
        }    
    </style>
{% endblock %}

{% block body %}
<br>
<div class="row align-items-center justify-content-between">
    <div class="col-12 col-sm-12 page-title">
        <h3>Noticias y Novedades</h3>
    </div>
    <div class="col text-right">
            <a href="{{ path('_registroNoticia') }}" class="bttn__nr"><span class="fa fa-plus" style="margin-top: 8px;"></span><span class="text__nr">Nuevo registro</span></a>
    </div>
</div>
<div class="row">
    <div class="col-sm-16 col-md-16 col-lg-16">
        <div class="card">
            <div class="card-header gradiente">
                <h5 class="card-title">Listado de registros</h5>
            </div>
            <div class="card-block">
                <div class="row" id="div-active-alert" style="display:none;">
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                    <div class="col-sm-12">
                        <div class="alert alert-danger" role="alert"> 
                            <strong>Error en el servidor!</strong> <span id="active-error">Ha ocurrido un error en el servidor. Contacte al administrador del sistema.</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                </div>
                <table class="table" id="dt">
                    <thead class="sty__title">
                        <tr>
                            <th class="hd__title">Tipo</th>
                            <th class="hd__title">Título</th>
                            <th class="hd__title">Fecha Creación</th>
                            <th class="hd__title">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for noticia in noticias %}
                            <tr class="odd">
                                <td>
                                    {{ noticia.tipoNoticia }}
                                </td>
                                <td>{{ noticia.titulo }}</td>
                                <td>{{ noticia.fechaRegistro }}</td>
                                <td class="center">
                                    <a href="{{ path('_registroNoticia', { 'noticia_id': noticia.id }) }}" title="{{ 'Editar'|trans }}" class="btn btn-link btn-sm"><span class="fa fa-pencil"></span></a>
                                    <a href="#" class="btn btn-link btn-sm {% if noticia.delete_disabled == '' %}delete{% endif %} {{ noticia.delete_disabled }}" data="{{ noticia.id }}"><span class="fa fa-trash"></span></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
{% endblock %}